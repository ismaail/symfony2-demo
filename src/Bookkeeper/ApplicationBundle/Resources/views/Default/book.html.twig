{{ form_start(form, {attr: {'class': 'form-horizontal', novalidate: 'novalidate'}}) }}
<div class="form-group">
    {{ form_label(form.title, null, {'label_attr': {'class':'col-sm-2 col-md-2 col-lg-2 control-label'}}) }}
    <div class="col-sm-10 col-md-8 col-lg-7">{{ form_widget(form.title) }}</div>
    <div class="alert alert-danger col-sm-offset-2 col-lg-offset-2 col-sm-8 col-md-6">{{ form_errors(form.title) }}</div>
</div>
<div class="form-group">
    {{ form_label(form.description, null, {'label_attr': {'class':'col-sm-2 col-md-2 col-lg-2 control-label'}}) }}
    <div class="col-sm-10 col-md-8 col-lg-7">{{ form_widget(form.description) }}</div>
    <div class="alert alert-danger col-sm-offset-2 col-lg-offset-2 col-sm-8 col-md-6">{{ form_errors(form.description) }}</div>
</div>
<div class="form-group">
    {{ form_label(form.pages, null, {'label_attr': {'class':'col-sm-2 col-md-2 col-lg-2 control-label'}}) }}
    <div class="col-sm-10 col-md-8 col-lg-7">{{ form_widget(form.pages, {'attr': {'min': 0}}) }}</div>
    <div class="alert alert-danger col-sm-offset-2 col-lg-offset-2 col-sm-8 col-md-6">{{ form_errors(form.pages) }}</div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-md-offset-2 col-lg-offset-2 col-sm-10">{{ form_widget(form.submit) }}</div>
</div>
{{ form_end(form) }}